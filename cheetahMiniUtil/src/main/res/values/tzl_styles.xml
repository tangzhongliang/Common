<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="txt_title">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">200px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:textSize">20px</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="txt_divider">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:background">@drawable/input_box_popup_line</item>
    </style>

    <style name="txt_content">
        <item name="android:textSize">20px</item>
        <item name="android:textColor">#000</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">400px</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:textIsSelectable">false</item>
        <item name="android:suggestActionMsg">@null</item>
        <item name="android:inputType">textNoSuggestions</item>
        <item name="android:background">@null</item>
        <!--<item name="android:background">@drawable/select_text</item>-->
    </style>


    <style name="txt_parent">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginTop">14px</item>
        <item name="android:layout_height">70px</item>
        <item name="android:layout_width">660px</item>
        <item name="android:background">@drawable/input_box_popup_bg</item>
    </style>

    <style name="ok_button_new">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">200px</item>
        <item name="android:textColor">#fff</item>
        <item name="android:background">@drawable/selector_ok_button</item>
        <item name="android:text">OK</item>
    </style>

    <style name="cancel_button_new">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_width">200px</item>
        <item name="android:textColor">#000</item>
        <item name="android:background">@drawable/selector_cancel_button</item>
        <item name="android:text">Cancel</item>
    </style>

    <style name="txt_title_activity">
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:paddingLeft">30px</item>
        <item name="android:textSize">24px</item>
        <item name="android:textColor">#000</item>
    </style>
</resources>